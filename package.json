{
  "name": "prospect-mail",
  "productName": "Prospect Mail",
  "version": "1.2.1",
  "main": "src/main.js",
  "description": "Unofficial desktop mail client for Microsoft Outlook",
  "homepage": "https://github.com/julian-alarcon/prospect-mail",
  "keywords": [
    "Electron",
    "Outlook",
    "Microsoft",
    "Outlook Desktop",
    "Prospect"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/julian-alarcon/prospect-mail"
  },
  "bugs": {
    "url": "https://github.com/julian-alarcon/prospect-mail/issues"
  },
  "author": {
    "name": "Julian Alarcon",
    "email": "prospect-mail@mail.desentropia.com",
    "url": "https://github.com/julian-alarcon/"
  },
  "license": "MIT",
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "start": "electron . --ozone-platform=x11",
    "start-minimized": "electron . --ozone-platform=x11 --minimized",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:linux:x64": "electron-builder --x64 -l AppImage deb pacman rpm flatpak tar.gz snap",
    "dist:linux:arm64": "electron-builder --arm64 -l AppImage deb pacman rpm flatpak tar.gz",
    "dist:linux:x64:snap": "electron-builder --x64 -l snap",
    "dist:linux:arm64:snap": "electron-builder --arm64 -l snap",
    "dist:linux:snap": "electron-builder -l snap",
    "dist:linux:snap:x64": "electron-builder --x64 -l snap",
    "dist:linux:snap:arm64": "electron-builder --arm64 -l snap",
    "dist:linux:appimage": "electron-builder --x64 --arm64 -l AppImage",
    "dist:linux:appimage:x64": "electron-builder --x64 -l AppImage",
    "dist:linux:appimage:arm64": "electron-builder --arm64 -l AppImage",
    "dist:linux:deb": "electron-builder --x64 --arm64 -l deb",
    "dist:linux:deb:x64": "electron-builder --x64 -l deb",
    "dist:linux:deb:arm64": "electron-builder --arm64 -l deb",
    "dist:linux:pacman": "electron-builder --x64 --arm64 -l pacman",
    "dist:linux:pacman:x64": "electron-builder --x64 -l pacman",
    "dist:linux:pacman:arm64": "electron-builder --arm64 -l pacman",
    "dist:linux:rpm": "electron-builder --x64 --arm64 -l rpm",
    "dist:linux:rpm:x64": "electron-builder --x64 -l rpm",
    "dist:linux:rpm:arm64": "electron-builder --arm64 -l rpm",
    "dist:linux:flatpak": "electron-builder --x64 --arm64 -l flatpak",
    "dist:linux:flatpak:x64": "electron-builder --x64 -l flatpak",
    "dist:linux:flatpak:arm64": "electron-builder --arm64 -l flatpak",
    "dist:linux:targz": "electron-builder --x64 --arm64 -l tar.gz",
    "dist:mac": "electron-builder --mac",
    "dist:mac:arm64": "electron-builder --mac --arm64",
    "dist:mac:x64": "electron-builder --mac --x64",
    "dist:windows": "electron-builder --win --x64 --arm64",
    "dist:windows:x64": "electron-builder --win --x64",
    "dist:windows:arm64": "electron-builder --win --arm64",
    "release": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "io.github.julian-alarcon.prospect-mail",
    "linux": {
      "category": "Email;Network;Office",
      "packageCategory": "net",
      "executableName": "prospect-mail",
      "synopsis": "Prospect Mail, unofficial desktop mail client for Microsoft Outlook",
      "executableArgs": [
        "--ozone-platform=x11"
      ],
      "desktop": {
        "entry": {
          "Name": "Prospect Mail",
          "Comment": "Unofficial desktop mail client for Microsoft Outlook",
          "StartupWMClass": "Prospect Mail"
        }
      },
      "target": [
        "AppImage",
        "deb",
        "pacman",
        "rpm",
        "snap",
        "flatpak",
        "tar.gz"
      ],
      "publish": {
        "provider": "github",
        "releaseType": "release"
      }
    },
    "rpm": {
      "fpm": [
        "--rpm-rpmbuild-define=_build_id_links none"
      ]
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "base": "core22",
      "executableArgs": [
        "--ozone-platform=x11"
      ],
      "plugs": [
        "default",
        "cups",
        "mount-observe",
        "removable-media",
        "screen-inhibit-control",
        "upower-observe"
      ],
      "environment": {
        "TMPDIR": "$XDG_RUNTIME_DIR"
      },
      "publish": [
        {
          "provider": "snapStore",
          "channels": "beta"
        }
      ]
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "24.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "24.08",
      "useWaylandFlags": true,
      "finishArgs": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--own-name=org.mpris.MediaPlayer2.chromium.*",
        "--filesystem=xdg-run/tray-icon:create",
        "--env=XDG_SESSION_TYPE=x11"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "type": "distribution",
      "publish": {
        "provider": "github",
        "releaseType": "release"
      }
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "publish": {
        "provider": "github",
        "releaseType": "release"
      }
    },
    "nsis": {
      "differentialPackage": false
    },
    "dmg": {
      "writeUpdateInfo": false
    }
  }
}
